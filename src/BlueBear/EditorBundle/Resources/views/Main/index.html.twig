{% extends 'BlueBearEditorBundle::layout.html.twig' %}

{% block content %}
    <h1>Map Editor</h1>

    <div class="list">
        {% if maps|length > 0 %}
            <table>
                {% for map in maps %}
                    <tr>
                        <td>{{ map.id }}</td>
                        <td>{{ map.label }}</td>
                        <td>
                            <a href="{{ path('bluebear_map_edit', {id: map.id}) }}">edit</a>
                            <a href="{{ path('bluebear_map_delete', {id: map.id}) }}" class="item-delete">delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            No map was yet created in backoffice. Click <a href="{{ path('bluebear_backoffice_map_edit') }}">here</a>
            to create one.
        {% endif %}
    </div>
{% endblock %}