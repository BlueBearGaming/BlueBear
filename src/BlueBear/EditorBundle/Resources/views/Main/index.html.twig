{% extends 'BlueBearAdminBundle::admin.layout.html.twig' %}

{% block content %}
    <h1>Map Editor</h1>

    <div class="table-responsive">

        {% if maps|length > 0 %}
            <table class="table table-striped table-hover">
                <thead>
                <th>Id</th>
                <th>Label</th>
                <th></th>
                </thead>
                <tbody>
                {% for map in maps %}
                    <tr>
                        <td>{{ map.id }}</td>
                        <td>{{ map.label }}</td>
                        <td>
                            <a href="{{ path('bluebear_map_edit', {mapName: map.name}) }}" class="btn btn-sm">edit</a>
                            <a href="{{ path('bluebear_map_delete', {id: map.id}) }}" class="item-delete btn btn-sm">delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            No map was yet created in backoffice. Click <a href="{{ path('bluebear_admin_map_create') }}">here</a>
            to create one.
        {% endif %}
    </div>
{% endblock %}

{% block head %}
    {% stylesheets  'bundles/bluebearbackoffice/css/bootstrap-datetimepicker.min.css'
    'bundles/bluebearbackoffice/css/backoffice.css'
    filter='cssrewrite' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    {% javascripts
    'assets/jquery/jquery.min.js'
    'assets/jquery-ui/ui/minified/core.min.js'
    'assets/jquery-ui/ui/minified/widget.min.js'
    'assets/jquery-ui/ui/minified/mouse.min.js'
    'assets/jquery-ui/ui/minified/sortable.min.js'
    '@MopaBootstrapBundle/Resources/public/bootstrap-sass/assets/javascripts/bootstrap.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-collection.js'
    '@MopaBootstrapBundle/Resources/public/js/mopabootstrap-subnav.js'
    '@MopaBootstrapBundle/Resources/public/components/smalot-bootstrap-datetimepicker/js/bootstrap-datetimepicker.js'
    '@MopaBootstrapBundle/Resources/public/components/smalot-bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.fr.js'
    'bundles/bluebearbackoffice/js/vendors/highcharts.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}