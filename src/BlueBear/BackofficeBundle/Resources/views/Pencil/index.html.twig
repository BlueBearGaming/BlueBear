{% extends 'BlueBearBackofficeBundle::layout.html.twig' %}

{% block rightMenu %}
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path('bluebear_backoffice_pencil_edit') }}">Add new pencil</a></li>
        <li><a href="{{ path('bluebear_backoffice_pencil_set_edit') }}">Add new pencil set</a></li>
    </ul>
{% endblock %}

{% block content %}
    <h1>Pencils</h1>

    <div class="pencils-list">
        {% set list = pencils %}
        {% set editRoute = 'bluebear_backoffice_pencil_edit' %}
        {% set deleteRoute = 'bluebear_backoffice_pencil_edit' %}

        {{ block('table_list') }}
    </div>

    <h1>Pencils Set</h1>

    <div class="pencils-list">
        {% set list = pencilSets %}
        {% set editRoute = 'bluebear_backoffice_pencil_set_edit' %}
        {% set deleteRoute = 'bluebear_backoffice_pencil_set_delete' %}

        {{ block('table_list') }}
    </div>
{% endblock %}