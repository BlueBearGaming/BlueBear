{% extends 'BlueBearBackofficeBundle::layout.html.twig' %}

{% block content %}
    <h1>Pencils</h1>

    <a href="{{ path('bluebear_backoffice_pencil_edit') }}">Add new pencil</a>
    <a href="{{ path('bluebear_backoffice_pencil_set_edit') }}">Add new pencil set</a>

    <div class="pencils-list">
        {% if pencils|length > 0 %}

            {% for pencil in pencils %}
                <div class="item">
                    <div class="info">
                        {{ pencil.label }}
                    </div>
                    <div class="actions">
                        <a href="{{ path('bluebear_backoffice_pencil_edit', {id: pencil.id}) }}">edit</a>
                        <a href="{{ path('bluebear_backoffice_pencil_delete', {id: pencil.id}) }}"
                           class="item-delete">delete</a>
                    </div>
                </div>
            {% endfor %}

        {% else %}
            No pencil yet.
        {% endif %}
    </div>

    <h1>Pencils Set</h1>

    <div class="pencils-list">
        {% if pencilSets|length > 0 %}

            {% for pencilSet in pencilSets %}
                <div class="item">
                    <div class="info">
                        {{ pencilSet.label }}
                    </div>
                    <div class="actions">
                        <a href="{{ path('bluebear_backoffice_pencil_set_edit', {id: pencilSet.id}) }}">edit</a>
                        <a href="{{ path('bluebear_backoffice_pencil_set_delete', {id: pencilSet.id}) }}"
                           class="item-delete">delete</a>
                    </div>
                </div>
            {% endfor %}

        {% else %}
            No pencil set yet.
        {% endif %}
    </div>
{% endblock %}