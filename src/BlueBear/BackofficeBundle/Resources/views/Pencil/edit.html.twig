{% extends 'BlueBearBackofficeBundle:Pencil:index.html.twig' %}

{% block content %}
    <h1>Pencil Edit</h1>
    {% set action = app.request.get('_route') %}
    {% set returnRoute = 'bluebear_backoffice_pencil' %}
    {% set containerClass = 'edit-pencil' %}

    {{ block('generic_form') }}
    <script>
        $(document).on('ready', function () {
            $('.edit-pencil').find('.fileupload-widget').blueBearFileUpload();
        });
    </script>
{% endblock %}