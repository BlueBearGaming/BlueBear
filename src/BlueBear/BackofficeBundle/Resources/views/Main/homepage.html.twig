{% extends 'BlueBearBackofficeBundle::layout.html.twig' %}

{% block content %}
    <div class="test"></div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).on('ready', function () {
            var HighChartHelper = {
                init: function (container, options) {
                    container.highcharts({
                        chart: {
                            type: options.type,
                            backgroundColor: '#303030'
                        },
                        title: {
                            text: options.title
                        },
                        xAxis: {
                            categories: ['Apples', 'Bananas', 'Oranges']
                        },
                        yAxis: {
                            title: {
                                text: 'Fruit eaten'
                            }
                        },
                        series: options.series
                    });
                }
            };
            var chartsOptions = {
                type: 'pie',
                title: 'Images',
                series: [
                    {
                        name: 'test',
                        data: [0, 2, 5, 8, 9]
                    }
                ]
            };
            HighChartHelper.init($('.test'), chartsOptions);
        })
    </script>
{% endblock %}