{% extends "BlueBearEditorBundle::layout.html.twig" %}

{% block content %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
    <div class="col-md-3"></div>
    <div class="col-md-6 well">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

            <div class="form-group">
                <label for="username" class="control-label col-sm-3 required">
                    {{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-9">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                           class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label for="password"
                       class="control-label col-sm-3 required">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                <div class="col-sm-9">
                    <input type="password" id="password" name="_password" required="required" class=" form-control"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-lg-offset-9">
                    <input type="submit" id="_submit" name="_submit"
                           value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="right btn btn-default"/>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
{% endblock content %}