{% extends '@BlueBearBackoffice/layout.html.twig' %}

{% block container %}
    {% set parameters = {race: app.request.get('race'), class: app.request.get('class'), attributes: app.request.get('attributes')} %}

    <div class="container">
        <div class="row-fluid">
            <form action="{{ path('bluebear.dungeon.selectProfile', parameters) }}" method="post"
                  class="sum-container">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Choose your profile
                    </div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            {{ form_widget(form) }}
                        </div>
                        <div class="col-md-9">

                        </div>

                    </div>
                    <div class="panel-footer">
                        <a href="{{ path('bluebear.dungeon.selectRace') }}">{{ 'bluebear.dungeon.previous' }}</a>
                        <input type="submit" class="btn btn-default" value="{{ 'bluebear.dungeon.next' }}"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}

