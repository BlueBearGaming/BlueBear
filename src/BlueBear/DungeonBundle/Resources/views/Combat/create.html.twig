{% extends '@BlueBearBackoffice/layout.html.twig' %}

{% block container %}
    <div class="container">
        {# create new game #}
        <div class="row-fluid">
            <form action="{{ path('bluebear.dungeon.combat.create') }}" method="post"
                  class="sum-container hell-arena">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Choose the fighters !!!
                    </div>
                    {{ form_errors(form) }}
                    <div class="panel-body">
                        <div class="col-md-5">
                            {{ form_row(form.fighter_1) }}
                            {{ form_row(form.player_1) }}
                        </div>
                        <div class="col-md-2">
                            VS
                        </div>
                        <div class="col-md-5">
                            {{ form_row(form.fighter_2) }}
                            {{ form_row(form.player_2) }}
                        </div>
                        {{ form_rest(form) }}
                    </div>
                    <div class="panel-footer">
                        <input type="submit" class="btn btn-danger" value="Fight !!!"/>
                    </div>
                </div>
            </form>
        </div>
        {# running games #}
        {% if games | length > 0 %}
            <div class="row-fluid">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Running games
                    </div>
                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                 <tr>
                                     <th>#</th>
                                     <th>Name</th>
                                     <th></th>
                                 </tr>
                            </thead>
                            <tbody>
                            {% for game in games %}
                            <tr>
                                <td>{{ game.id }}</td>
                                <td>{{ game.name }}</td>
                                <td>
                                    <a class="btn" href="{{ path('bluebear.dungeon.combat.run', {gameId: game.id}) }}">Continue</a>
                                    <a class="btn disabled" href="#">Delete</a>
                                </td>
                            </tr>
                            </tbody>
                            {% endfor %}
                        </table>
                    </div>

                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
