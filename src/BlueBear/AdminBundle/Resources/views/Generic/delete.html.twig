{% extends admin.layout is defined ? admin.layout : '' %}

{% block content %}
    <div class="well">
        <form action="{{ path(admin.action('delete').route, {id: admin.entity.id}) }}" method="post">
            <div class="form-group">
                {{ 'bluebear.admin.deleting' | trans({'%entity%' : admin.entity.label, '%id%': admin.entity.id}) }}
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <div class="text-right button-list">
                    <a href="{{ path(admin.action('list').route) }}" class="btn">
                        <i class="fa fa-arrow-circle-left"></i>{{ 'bluebear.admin.cancel' | trans }}</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-remove"></i>{{ 'bluebear.admin.delete' | trans }}
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}