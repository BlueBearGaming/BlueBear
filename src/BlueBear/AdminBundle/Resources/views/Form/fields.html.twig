{% block admin_list %}
    {% if admin.entities|length > 0 %}
        {% set fields = admin.currentAction.fields %}

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    {% for field in fields %}
                        <th>{{ field.title | capitalize }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for entity in admin.entities %}
                    <tr>
                        {% for field in fields %}
                            <td>{{ attribute(entity, field.name) }}</td>
                        {% endfor %}
                        <td>
                            <a href="{{ path(admin.generateRouteName('edit'), {id: entity.id}) }}"
                               class="btn btn-sm">edit</a>
                            <a href="{{ path(admin.generateRouteName('delete'), {id: entity.id}) }}"
                               class="item-delete btn btn-sm">delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        No record yet
    {% endif %}
{% endblock %}