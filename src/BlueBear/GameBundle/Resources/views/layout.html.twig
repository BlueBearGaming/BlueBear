<!DOCTYPE html>
<html lang="{{ config.lang }}">
<head>
    <title>
        {% block title %}{{ config.title }}{% endblock %}
    </title>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ config.description }}">
    <meta name="keywords" content="in progress">
    <meta name="author" content="in progress">
    {% block head %}{% endblock %}
    {% block stylesheets %}{% endblock %}
</head>
<body>
<!-- flash messages -->
<div class="alert-container container">
    {% block notice %}
        {% for notice_level in ['success', 'error', 'info', 'warning'] %}
            {% for flash in app.session.flashbag.get(notice_level) %}
                {% set notice_level = (notice_level == 'error') ? 'danger' : notice_level %}
                <div class="alert {{ 'alert-' ~ notice_level }}">
                    {{ flash }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endblock %}
</div>

{% block container %}
    <div class="container">
        <div class="row-fluid">
            <div class="col-md-2">
                {% block left %}{% endblock %}
            </div>
            <div class="col-md-10">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

<footer>
    {% javascripts
    'assets/jquery/jquery.min.js'
    'assets/jquery-ui/ui/minified/core.min.js'
    'assets/jquery-ui/ui/minified/widget.min.js'
    'assets/jquery-ui/ui/minified/mouse.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block javascripts %}{% endblock %}
</footer>
</body>
</html>
