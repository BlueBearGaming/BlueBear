<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('build/admin.css') }}" />
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block container %}
            {% include "admin/menu/top-menu.html.twig" %}

            <div class="container">
                <div class="row-fluid">
                    <div class="col-md-2">
                        {% block left %}{% endblock %}
                    </div>
                    <div class="col-md-10">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        {% endblock %}

        <script src="{{ asset('build/admin.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
